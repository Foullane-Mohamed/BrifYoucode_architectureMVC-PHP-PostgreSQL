{% extends "layout.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
<div class="text-center">
    <h1 class="text-4xl font-bold mb-4">Welcome to Blog MVC</h1>
    <p class="text-xl text-gray-600 mb-8">A simple blog application built with PHP MVC</p>
    
    {% if session.logged_in %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Welcome back!</strong>
            <span class="block sm:inline">You are logged in and ready to explore.</span>
        </div>
    {% else %}
        <div class="space-x-4">
            <a href="/login" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Login
            </a>
            <a href="/register" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                Register
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}