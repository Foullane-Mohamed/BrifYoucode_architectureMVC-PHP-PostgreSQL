{% extends "layout.twig" %}

{% block title %}Create Article{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Create New Article</h1>
    <form action="/articles" method="POST" class="bg-white rounded-lg shadow-md p-6">
        <div class="mb-4">
            <label for="title" class="block text-gray-700 font-bold mb-2">Title</label>
            <input type="text" name="title" id="title" required 
                   class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500">
        </div>
        <div class="mb-6">
            <label for="content" class="block text-gray-700 font-bold mb-2">Content</label>
            <textarea name="content" id="content" rows="10" required
                      class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500"></textarea>
        </div>
        <div class="flex justify-end">
            <button type="submit" class="py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600">
                Publish Article
            </button>
        </div>
    </form>
</div>
{% endblock %}