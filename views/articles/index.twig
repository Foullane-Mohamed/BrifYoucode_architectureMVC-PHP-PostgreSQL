{% extends "layout.twig" %}

{% block title %}Articles{% endblock %}

{% block content %}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for article in articles %}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold mb-2">{{ article.title }}</h2>
            <p class="text-gray-600 mb-4">{{ article.content|slice(0, 150) }}...</p>
            <div class="flex justify-between items-center">
                <span class="text-sm text-gray-500">By {{ article.username }}</span>
                <div class="space-x-2">
                    <a href="/articles/{{ article.id }}" class="text-blue-500 hover:text-blue-700">Read</a>
                    {% if session.user_id == article.user_id %}
                        <a href="/articles/{{ article.id }}/edit" class="text-green-500 hover:text-green-700">Edit</a>
                        <a href="/articles/{{ article.id }}/delete" class="text-red-500 hover:text-red-700" onclick="return confirm('Are you sure?')">Delete</a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-span-3 text-center text-gray-500">
            No articles found.
        </div>
    {% endfor %}
</div>
{% endblock %}