{% extends "layout.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
<div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-8">
        <h1 class="text-3xl font-bold mb-4">{{ article.title }}</h1>
        <div class="flex items-center mb-6">
            <span class="text-gray-500">By {{ article.username }}</span>
            <span class="mx-2 text-gray-300">â€¢</span>
            <span class="text-gray-500">{{ article.created_at|date("d/m/Y") }}</span>
        </div>
        <div class="prose max-w-none">
            {{ article.content|nl2br }}
        </div>
        {% if session.user_id == article.user_id %}
            <div class="mt-8 flex space-x-4">
                <a href="/articles/{{ article.id }}/edit" class="py-2 px-4 bg-green-500 text-white rounded hover:bg-green-600">Edit</a>
                <a href="/articles/{{ article.id }}/delete" class="py-2 px-4 bg-red-500 text-white rounded hover:bg-red-600" onclick="return confirm('Are you sure?')">Delete</a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}